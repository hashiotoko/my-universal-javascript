{
  "name": "@my-universal-javascript/backend",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm-run-all build:*",
    "build:clean": "rimraf dist",
    "build:schema": "mkdir -p dist && concat -o dist/schema.gql src/schema/*.gql && graphql-codegen --config codegen.yml",
    "build:ts": "tsc",
    "start": "node ./dist/index.js",
    "start:dev": "tsc-watch --onSuccess 'dotenv node ./dist/index.js'",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/data-source.ts",
    "migration:create": "DB_MIGRATION=true dotenv yarn typeorm migration:create",
    "migration:generate": "DB_MIGRATION=true dotenv yarn typeorm migration:generate -p",
    "migration:run": "DB_MIGRATION=true dotenv yarn typeorm migration:run",
    "migration:revert": "DB_MIGRATION=true dotenv yarn typeorm migration:revert",
    "migration:show": "DB_MIGRATION=true dotenv yarn typeorm migration:show",
    "lint": "eslint './**/*.{ts,json,js}'",
    "test": "env NODE_ENV=test jest __tests__/ --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.4",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^16.11.10",
    "concat": "^1.0.3",
    "ts-node": "^10.9.1"
  }
}
